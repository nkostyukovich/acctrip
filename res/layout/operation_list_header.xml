<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/op_list_header_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/op_list_header_sum"
        style="@style/OpHeaderEventName"
        />

    <TextView
        android:id="@+id/op_list_header_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/op_list_header_name"
        style="@style/OpHeaderEventDesc"
        />

    <TextView
        android:id="@+id/op_list_header_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
 	    android:text="@string/op_all_expenses"
 		style="@style/OpHeaderEventSum"
        />

    <SearchView
        android:id="@+id/uni_op_searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/op_list_main_layout"
        android:iconifiedByDefault="false"
        android:queryHint="@string/filter_hint_start_typing" >
    </SearchView>

    <LinearLayout
        android:id="@+id/op_list_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/op_list_header_desc" >

        <Button
            android:id="@+id/op_new_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/op_new_btn" />

    </LinearLayout>

</RelativeLayout>