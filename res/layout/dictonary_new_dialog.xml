<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dic_new_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        android:text="@string/dic_new_code"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	
    <EditText
        android:id="@+id/dic_new_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="8dp"
        android:inputType="text" 
        android:layout_below="@+id/dic_new_name_tv">
    <requestFocus />
    </EditText>
    <TextView
        android:id="@+id/dic_new_name_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_margin="8dp"
        android:text="@string/dic_new_code"
        android:layout_below="@+id/dic_new_name_et"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    
    
     <EditText
        android:id="@+id/dic_new_name_et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10" 
        android:layout_margin="8dp"
        android:layout_below="@+id/dic_new_name_tv2"
        android:visibility="gone">
        

    </EditText>

</RelativeLayout>
